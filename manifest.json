{
  "manifest_version": 3,
  "name": "Stake Code Claimer",
  "version": "3.1",
  "description": "Automatically monitors specified Telegram channels for bonus codes, claims them on a chosen stake domain, and logs the history.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.telegram.org/*?app=CodeClaim&*",
    "*://*.stake.com/*?app=CodeClaim&*",
    "*://*.stake1001.com/*?app=CodeClaim&*",
    "*://*.stake1002.com/*?app=CodeClaim&*",
    "*://*.stake1003.com/*?app=CodeClaim&*",
    "*://*.stake1004.com/*?app=CodeClaim&*",
    "*://*.stake1020.com/*?app=CodeClaim&*",
    "*://*.stake1021.com/*?app=CodeClaim&*",
    "*://*.stake1022.com/*?app=CodeClaim&*",
    "*://*.stake1023.com/*?app=CodeClaim&*",
    "*://*.stake.pet/*?app=CodeClaim&*",
    "*://*.stakeru8.com/*?app=CodeClaim&*",
    "*://*.stake.jp/*?app=CodeClaim&*",
    "*://*.stake.bz/*?app=CodeClaim&*",
    "*://*.stake.coach/*?app=CodeClaim&*",
    "*://*.stake.pink/*?app=CodeClaim&*",
    "*://*.stake.ac/*?app=CodeClaim&*",
    "*://*.stake.games/*?app=CodeClaim&*",
    "*://*.stake.bet/*?app=CodeClaim&*",
    "*://*.stake.mba/*?app=CodeClaim&*",
    "*://*.stake.ceo/*?app=CodeClaim&*",
    "*://*.stake.krd/*?app=CodeClaim&*",
    "*://*.stake.blue/*?app=CodeClaim&*",
    "*://*.stake.mg/*?app=CodeClaim&*",
    "*://*.stake.tel/*?app=CodeClaim&*",
    "*://*.stake.horse/*?app=CodeClaim&*",
    "*://*.stake.us/*?app=CodeClaim&*",
    "*://*.staketr.com/*?app=CodeClaim&*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
