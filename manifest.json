{
  "manifest_version": 3,
  "name": "Stake Code Claimer",
  "version": "1.0",
  "description": "Automatically monitors specified Telegram channels for bonus codes, claims them on a chosen stake domain, and logs the history.",
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "*://*.telegram.org/*",
    "*://*.stake.com/*",
    "*://*.stake1001.com/*",
    "*://*.stake1002.com/*",
    "*://*.stake1003.com/*",
    "*://*.stake1004.com/*",
    "*://*.stake1020.com/*",
    "*://*.stake1021.com/*",
    "*://*.stake1022.com/*",
    "*://*.stake1023.com/*",
    "*://*.stake.pet/*",
    "*://*.stakeru8.com/*",
    "*://*.stake.jp/*",
    "*://*.stake.bz/*",
    "*://*.stake.coach/*",
    "*://*.stake.pink/*",
    "*://*.stake.ac/*",
    "*://*.stake.games/*",
    "*://*.stake.bet/*",
    "*://*.stake.mba/*",
    "*://*.stake.ceo/*",
    "*://*.stake.krd/*",
    "*://*.stake.blue/*",
    "*://*.stake.mg/*",
    "*://*.stake.tel/*",
    "*://*.stake.horse/*",
    "*://*.stake.us/*",
    "*://*.staketr.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "48": "icon.png"
  }
}
